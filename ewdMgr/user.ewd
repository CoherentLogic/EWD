<span>
<h4>&nbsp;&nbsp;&nbsp;Add/Edit a User's Details</h4>

    <div class="applicationPanel">
     <form method="post" action="ewd">
      <table border="0" width="100%" class="propsText">
        <tr>
            <td>Username : </td>
            <td><input type="text" name="user" value="*" readonly></td>
        </tr>
        <tr>
            <td>New password : </td>
            <td>
               <input type="password" name="newPass1" value="">
            </td>
        </tr>
        <tr>
            <td>Re-enter new password : </td>
            <td>
               <input type="password" name="newPass2" value="">
            </td>
        </tr>
        <tr>
            <td>User type : </td>
            <td><select name="userType"></select></td>
        </tr>
        <tr>
            <td>Status : </td>
            <td><select name="userStatus"></select></td>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td><input type="submit" class="actionButton" name="userUpdate" value="Update" nextpage="reloadSecurity" ajax="true" targetId="userNull" action="userUpdate^%zewdMgrAjax"></td>
        </tr>

    </table>
   </form>
  </div>
  <div id="userNull" />
</span>
